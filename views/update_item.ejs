  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Items</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-light">Use the below form to Update an item</span>
        </div>

        <!-- add item form -->
         <!-- form handling -->
 <form method="POST" id="update_item">
    <div class="new_item">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= item._id %>">
            <input type="text" name="name" value="<%= item.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Quantity</label>
            <input type="number" name="quantity" value="<%= item.quantity%>" placeholder="0">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Prix</label>
            <input type="number" name="price" value="<%= item.price%>" placeholder="0">
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
